

<div class="row">
    <h3 style="text-align:center; font-size: 20px;font-size: 2.0vw;">
        Player Stat Sheet
    </h3>
    <div class="col-6">
        <MudText Class="stats-text" Style="font-weight:bold !important;font-size:1.5vw !important;">Round</MudText>
        <MudText Class="stats-text" Style="font-weight:bold !important;font-size:1.3vw !important;">Day: 4</MudText>

        <MudText Class="stats-text">Total wins @Player?.TotalRoundWins</MudText>
        <MudText Class="stats-text">Average guesses @Player?.AvgGuessesPerRound</MudText>
        <MudText Class="stats-text">Total ties: @Player?.TotalRoundTies</MudText>
        <MudText Class="stats-text">Missed entries: @Player?.MissedEntriesInRound</MudText>
        <MudText Class="stats-text">Win%: @Player?.RoundWinPercentage</MudText>
        <MudText Class="stats-text">Avg missed entries: @Player?.AvgMissedEntriesPerRound </MudText>
        
    </div>
    <div class="col-6">
        <MudText Class="stats-text" Style="font-weight:bold !important;font-size:1.5vw !important;">All Time</MudText>
        <MudText Class="stats-text" Style="font-weight:bold !important;font-size:1.3vw !important;">Day: 187</MudText>

        <MudText Class="stats-text">Total Ties: @Player?.TotalTies</MudText>
        <MudText Class="stats-text">Avg total guesses: @Player?.AvgTotalGuesses</MudText>
        <MudText Class="stats-text">Win percentage: @Player?.Winpercentage</MudText>
        <MudText Class="stats-text">Overall games played: @Player?.OverallGamesPlayed</MudText>
        <MudText Class="stats-text">Total guesses @Player?.TotalGuesses</MudText>

       
    </div>
</div>





@code {
    [Parameter]
    public Player? Player { get; set; }



    protected async override Task OnInitializedAsync()
    {

    }

    protected async override Task OnParametersSetAsync()
    {

    }

}

