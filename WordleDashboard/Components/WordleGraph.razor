@using WordleDashboard.EFModels


    <div class="container">
        @*<div class="progress-container" style="margin-top: 20px">*@
        <MudStack Spacing="10">
            <h4 style="font-family:Lato;">One guess</h4>
            <h4 style="font-family:Lato;">Two guesses</h4>
            <h4 style="font-family:Lato;">Three guesses</h4>
