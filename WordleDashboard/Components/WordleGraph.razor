                <MudProgressLinear Color="Color.Primary" Value="@player.ThreeGuessesInRound" Size=Size.Large Max="20" Indeterminate="false" Class="my-7" />
                    @*<progress id="file" value="@player?.ThreeGuessesInRound" max="30"> 32% </progress>*@

                <MudProgressLinear Color="Color.Primary" Value="@player.FourGuessesInRound" Size=Size.Large Max="20" Indeterminate="false" Class="my-7" />
                    @*<progress id="file" value="@player?.FourGuessesInRound" max="30"> 32% </progress>*@

                <MudProgressLinear Color="Color.Primary" Value="@player.FiveGuessesInRound" Size=Size.Large Max="20" Indeterminate="false" Class="my-7" />
                    @*<progress id="file" value="@player?.FiveGuessesInRound" max="30"> 32% </progress>*@
                <MudProgressLinear Color="Color.Primary" Value="@player.SixGuessesInRound" Size=Size.Large Max="20" Indeterminate="false" Class="my-7" />
                 @*   <progress id="file" value="@player?.SixGuessesInRound" max="30"> 32% </progress>*@
            </MudStack>
  @*          </div>*@
        }
    </div>

