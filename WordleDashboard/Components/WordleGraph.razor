        {
            <MudStack>
                @*<div class="progress-container">*@
                    <h4 style="font-family:Lato;">@player.Name</h4>
            
                <MudProgressLinear Color="Color.Primary" Value="@player.OneGuessInRound" Size=Size.Large Max="20" Indeterminate="false" Class="my-7" />
